<div class="container">
  <h1 id="title">Eat burgers!</h1>
  <div id="burgerForm">
    <p>Add a burger you want to eat below!</p>
    <form class="create-form">
      <div class="form-group">
        <input class="form-control" type="text" id= "burger" name="burger">
      </div>
      <button class="btn btn-primary" type="submit">Add burger</button>
    </form>
  </div>

  <h2>Eat these burgers!</h2>
  <ul class="list-group">
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block }}
      {{/unless}}
    {{/each}}
  </ul>

  <h2>I've had these burgers...</h2>
  <ul class="list-group">
    {{#each burgers}}
      {{#if devoured}}
        <li class="list-group-item">{{ burger_name }}</li>
      {{/if}}
    {{/each}}
  </ul>
</div>
