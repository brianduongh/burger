<h1>BRUGERS</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p>{{ burger_name }}</p>
    {{/unless}}
  {{/each}}
</ul>

<h2>DEVOURED BURGER</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>{{ burger_name }}</p>
    {{/if}}
  {{/each}}
</ul>



<h1>Add cat</h1>
<form class="create-form">
  <div class="form-group">
    <label for="burger">Burger:</label>
    <input type="text" id= "burger" name="burger">
  </div>
  <button type="submit">Add burger</button>
</form>
