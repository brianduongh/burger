<h1>Eat burgers!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block }}
    {{/unless}}
  {{/each}}
</ul>

<h2>I've had these burgers...</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>{{ burger_name }}</p>
    {{/if}}
  {{/each}}
</ul>



<h1>Add Burger</h1>
<form class="create-form">
  <div class="form-group">
    <label for="burger">Burger:</label>
    <input type="text" id= "burger" name="burger">
  </div>
  <button type="submit">Add burger</button>
</form>
